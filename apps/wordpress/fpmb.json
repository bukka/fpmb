{
  "title": "WordPress",
  "version": "latest",
  "nginx": {
    "executor": {
      "type": "docker",
      "image": "nginx:alpine"
    },
    "conf": ["nginx.conf.j2", "fastcgi_params"],
    "depends": ["fpm"]
  },
  "fpm": {
    "executor": {
      "type": "cli",
      "executable": "php-fpm"
    },
    "conf": ["php-fpm.conf"]
  },
  "app": {
    "conf": [
      {"from": "wp-config.php.j2", "to": "wp-config.php"}
    ]
  }
}
